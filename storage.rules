rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
        firestore.exists(/databases/(default)/documents/adminRoles/$(request.auth.token.email));
    }
    
    // Allow public read access to carousel images
    match /carousel/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Allow public read access to program images
    match /programs/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Allow public read access to blog images
    match /blogs/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Allow public read access to story images
    match /stories/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // User profile images - users can upload their own
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow public read access to gallery images
    match /gallery/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Default deny all other operations
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}